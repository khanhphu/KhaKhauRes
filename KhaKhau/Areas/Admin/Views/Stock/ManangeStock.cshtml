@using KhaKhau.Models
@model StockDTO;

@{
    ViewData["Title"] = "ManangeStock";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="width:50%">
<h2> Số lượng món </h2>
<form asp-action="ManangeStock">
   <input type="hidden" asp-for="ProductId" />
        <h6>Mã món:<small>@Model.ProductId</small></h6>

   <div class="my-2">
      <label>Còn:</label>
      <input type="number" class="form-control" asp-for="Quantity" />
      <span asp-validation-for="Quantity" class="text-danger"></span>
   </div>

   <div class="my-2">
      <button type="submit" class="btn btn-info">Cập nhật</button>
              <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Quay về</a>

   </div>

</form>
</div>
