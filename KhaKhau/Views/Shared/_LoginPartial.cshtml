                    <span id="username" style="text-align:center">@User.Identity?.Name</span>!
                </a> 
         
            <ul class="dropdown-menu mx-0 my-0">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fas fa-solid fa-user"></i> Profile
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="ProductManager" asp-action="Index">
