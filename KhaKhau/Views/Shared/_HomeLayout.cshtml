
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]KhaKhau</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
   
 
    <partial name="_HeaderLayout" />
    

	<!--CONTENT-->
	<div>
		@RenderBody()
	</div>
    <div class="content">
		<img src="~/images/rectangle_1.png" />
        <div class="overplay">
        </div>
        <div class="text-1">Welcome To Our Restaurant</div>
        <p>User Id: @ViewData["UserID"]</p>

    </div>
    <div class="body">
        <div class="body-content">
            <p>"Good food is the foundation of genuine happiness."</p>
            <h2>Auguste Escoffier</h2>
        </div>
    </div>
    <div class="main">
		<img src="~/images/rectangle_3.png" />
        
    </div>
    <div class="footer">
        <div class="footer-left">
			<img src="~/images/rectangle_6.png" />
        </div>
        <div class="footer-right">
            <h3>BOOK A TABLE</h3>
            <h1>Phone: </h1>
            <h1>Person: </h1>
            <h1>Date: </h1>
            <h1>Time: </h1>
            <button>Book a table</button>
        </div>
    </div>
    <div class="contact">
        <div class="contact-left">
			<img src="~/images/logo_res.png" />
            <p>©Copyright 2024 KHAKHAU. All Rights Reserved</p>
        </div>
        <div class="contact-right">
            <h5>CONTACT</h5>
            <p>Street: D2 street, Ward 25, Binh Thanh District</p>
            <p>City: Ho Chi Minh</p>
            <p>State/Province/Area: Ho Chi Minh City</p>
            <p>Phone number:  (84-8) 3 512 6379/(84-8) 3 804 0955/(84-8) 3 804 0980</p>
            <p>Email: abcd@email.com</p>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <a class="dropdown-item" href="#">Something else here</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Separated link</a>
            </div>
        </div>
    </div>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
